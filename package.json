{
    "private": true,
    "scripts": {
        "build": "turbo build",
        "prisma": "docker-compose up -d --remove-orphans && turbo run prisma --parallel --continue --no-cache --force",
        "dev": "docker-compose up -d --remove-orphans && dotenv -- turbo dev --parallel --continue --no-cache",
        "docker:build": "docker-compose build",
        "docker:stop": "docker-compose down --remove-orphans",
        "lint": "turbo lint",
        "clean": "turbo clean",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "dotenv-cli": "^6.0.0",
        "eslint": "^7.32.0",
        "eslint-config-custom": "workspace:*",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "turbo": "^1.9.8"
    },
    "packageManager": "pnpm@7.15.0"
}
