{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "check-types": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "docker:build": {},
        "docker:stop": {},
        "clean": {
            "cache": false
        },
        "prisma": {
            "cache": false
        }
    },
    "globalEnv": ["DATABASE_URL"]
}
